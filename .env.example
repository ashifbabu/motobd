# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
MEASUREMENT_ID=your-measurement-id

# Database Configuration
FIRESTORE_COLLECTION_BIKES=bikes
FIRESTORE_COLLECTION_REVIEWS=reviews
FIRESTORE_COLLECTION_USERS=users

# AI Model Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
AI_MODEL_NAME=csebuetnlp/banglat5
AI_MODEL_CACHE_DIR=./model_cache
AI_MAX_LENGTH=1000
AI_NUM_BEAMS=5
AI_NO_REPEAT_NGRAM_SIZE=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG_MODE=True
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# Caching Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Storage Configuration
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png
STORAGE_BUCKET_NAME=your-storage-bucket

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_SAMPLE_RATE=1.0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Scraping Configuration
SCRAPING_INTERVAL_HOURS=24
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 